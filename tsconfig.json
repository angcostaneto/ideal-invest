{
  "compilerOptions": {
		"experimentalDecorators": true,
		"target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@infra": ["src/infra/index.ts"],
			"@domain": ["src/domain/index.ts"]
		},
		"outDir": "dist",
		"declaration": true,
  },
	"exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts", "node_modules", "tmp"],
	"include": ["**/*.ts"]
}
